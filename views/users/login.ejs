<% layout('layouts/boilerplate')%>
    <h1>Login</h1>
    <form action="/login" method="POST" class="validated-form" novalidate>
        <div class="mb-3">
            <label class="form-label" for="price">Username</label>
            <div class="input-group">

                <input type="text" class="form-control" id="username" placeholder="0.00" aria-label="price"
                    name="username" required>
            </div>
        </div>
        <div class="mb-3">
            <label class="form-label" for="password">Password</label>
            <div class="input-group">

                <input type="password" class="form-control" id="password" placeholder="0.00" aria-label="price"
                    name="password" required>
            </div>
        </div>
        <button class="btn btn-success" src="">Login</button>
    </form>